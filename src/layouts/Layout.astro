---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import '../styles/global.css';
import '../styles/revolutionary-animations.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Roboto:wght@300;400;500;600&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		<slot />
		
		<!-- Script de inicialización simplificado -->
		<script>
			// Evitar doble inicialización
			if (!window.__appInitialized) {
				window.__appInitialized = true;
				
				// Importar e inicializar la aplicación
				import('/src/utils/init.js').then(({ initializeApp }) => {
					initializeApp().catch(error => {
						console.error('Error fatal inicializando la aplicación:', error);
					});
				}).catch(error => {
					console.error('Error cargando módulo de inicialización:', error);
				});
			}
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
