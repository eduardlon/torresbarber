---
export const prerender = false;
import BarberoLayout from '../layouts/BarberoLayout.astro';
import { PanelBarbero } from '../components/barbero/PanelBarbero.tsx';

// Verificar autenticaci√≥n del barbero
const barberoSession = Astro.cookies.get('barbero_session');
const authToken = Astro.cookies.get('auth_token');

if (!barberoSession || !barberoSession.value || !authToken || !authToken.value) {
  return Astro.redirect('/login-barbero');
}
---

<BarberoLayout title="Panel Barbero - JP Barber">
	<PanelBarbero client:load />
</BarberoLayout>
