---
export const prerender = false;
import ClienteLayout from '../layouts/ClienteLayout.astro';
import { ClientePanel } from '../components/cliente/ClientePanel.tsx';

// Verificar autenticaci√≥n del cliente
const clienteSession = Astro.cookies.get('cliente_session');
const authToken = Astro.cookies.get('auth_token');

if (!clienteSession || !clienteSession.value || !authToken || !authToken.value) {
  return Astro.redirect('/login-cliente');
}
---

<ClienteLayout title="Panel Cliente - JP Barber">
	<ClientePanel client:load />
</ClienteLayout>

<style>
	body {
		margin: 0;
		padding: 0;
		background: #f9fafb;
	}
</style>