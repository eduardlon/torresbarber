---
interface BarberContact {
  id: string;
  nombre: string;
  telefono: string;
  especialidad?: string;
}

interface Props {
  barberos?: BarberContact[];
  message?: string;
}

const {
  barberos = [],
  message = 'Hola, me gustaría agendar un servicio contigo en JP Barber.'
} = Astro.props;

const contactos = barberos.length
  ? barberos
  : [
      { id: 'default-1', nombre: 'JP Barber', telefono: '+573000000000' }
    ];
---

<div class="whatsapp-container" id="whatsapp-barber-floating">
  <button class="whatsapp-float" id="whatsapp-barber-btn" aria-label="Hablar por WhatsApp">
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
    </svg>
    <div class="whatsapp-pulse"></div>
  </button>

  <div class="barber-selector" id="whatsapp-barber-selector">
    <div class="selector-header">
      <span class="selector-title">¿Con qué barbero quieres hablar?</span>
      <button class="selector-close" id="whatsapp-barber-close" aria-label="Cerrar">
        ×
      </button>
    </div>
    <div class="selector-options">
      {contactos.map((barbero) => (
        <a
          href={`https://wa.me/${barbero.telefono.replace(/\D/g, '')}?text=${encodeURIComponent(message)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="selector-option"
        >
          <div class="option-avatar">
            <span>{barbero.nombre.slice(0, 1)}</span>
          </div>
          <div class="option-content">
            <span class="option-name">{barbero.nombre}</span>
            {barbero.especialidad && <span class="option-role">{barbero.especialidad}</span>}
          </div>
          <span class="option-action">Chatear</span>
        </a>
      ))}
    </div>
  </div>
</div>

<style>
  .whatsapp-container {
    position: fixed;
    bottom: 2.5rem;
    right: 2.5rem;
    z-index: 60;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .whatsapp-container.hidden {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .whatsapp-float {
    position: relative;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #25d366 0%, #128c7e 100%);
    color: white;
    border-radius: 9999px;
    border: none;
    cursor: pointer;
    box-shadow: 0 20px 45px rgba(37, 211, 102, 0.35);
    transition: transform 200ms ease, box-shadow 200ms ease;
  }

  .whatsapp-float:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 24px 55px rgba(37, 211, 102, 0.45);
  }

  .whatsapp-float svg {
    position: relative;
    z-index: 2;
  }

  .whatsapp-pulse {
    position: absolute;
    inset: 0;
    border-radius: 9999px;
    background: rgba(37, 211, 102, 0.4);
    animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
    z-index: 1;
  }

  @keyframes pulse-ring {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }

  .barber-selector {
    position: absolute;
    bottom: 70px;
    right: 0;
    width: min(320px, 90vw);
    background: rgba(12, 12, 12, 0.98);
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.45);
    backdrop-filter: blur(16px);
    opacity: 0;
    visibility: hidden;
    transform: translateY(12px);
    transition: opacity 0.25s ease, transform 0.25s ease, visibility 0.25s;
  }

  .barber-selector.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .selector-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.25rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .selector-title {
    color: white;
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .selector-close {
    width: 28px;
    height: 28px;
    border-radius: 999px;
    display: grid;
    place-items: center;
    font-size: 1.5rem;
    color: rgba(255, 255, 255, 0.7);
    background: transparent;
    border: none;
    cursor: pointer;
    transition: background 150ms ease, color 150ms ease;
  }

  .selector-close:hover {
    background: rgba(255, 255, 255, 0.12);
    color: white;
  }

  .selector-options {
    display: grid;
    gap: 0.5rem;
    padding: 0.75rem;
  }

  .selector-option {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 0.75rem;
    align-items: center;
    padding: 0.75rem 1rem;
    border-radius: 18px;
    text-decoration: none;
    background: rgba(255, 255, 255, 0.04);
    border: 1px solid transparent;
    color: white;
    transition: transform 180ms ease, border-color 180ms ease, background 180ms ease;
  }

  .selector-option:hover {
    transform: translateY(-2px);
    border-color: rgba(248, 113, 113, 0.4);
    background: rgba(248, 113, 113, 0.15);
  }

  .option-avatar {
    width: 42px;
    height: 42px;
    border-radius: 999px;
    background: rgba(248, 113, 113, 0.2);
    display: grid;
    place-items: center;
    font-weight: 700;
    color: #f87171;
    letter-spacing: 0.05em;
  }

  .selector-option:hover .option-avatar {
    background: rgba(248, 113, 113, 0.35);
    color: white;
  }

  .option-content {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
  }

  .option-name {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.01em;
  }

  .option-role {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.18em;
  }

  .option-action {
    font-size: 0.8rem;
    font-weight: 600;
    color: rgba(248, 113, 113, 0.85);
    text-transform: uppercase;
    letter-spacing: 0.18em;
  }

  .selector-option:hover .option-action {
    color: white;
  }

  @media (max-width: 640px) {
    .whatsapp-container {
      bottom: 2rem;
      right: 1.75rem;
    }

    .whatsapp-float {
      width: 58px;
      height: 58px;
    }

    .barber-selector {
      right: -0.5rem;
      width: min(280px, 92vw);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .whatsapp-float,
    .selector-option {
      transition: none;
    }

    .whatsapp-pulse {
      animation: none;
    }
  }
</style>

<script>
  const button = document.getElementById('whatsapp-barber-btn');
  const selector = document.getElementById('whatsapp-barber-selector');
  const closeButton = document.getElementById('whatsapp-barber-close');
  const container = document.getElementById('whatsapp-barber-floating');

  if (button && selector && closeButton && container) {
    button.addEventListener('click', () => {
      selector.classList.toggle('active');
    });

    closeButton.addEventListener('click', (event) => {
      event.stopPropagation();
      selector.classList.remove('active');
    });

    document.addEventListener('click', (event) => {
      const target = event.target as HTMLElement;
      if (!button.contains(target) && !selector.contains(target)) {
        selector.classList.remove('active');
      }
    });
  }
</script>
