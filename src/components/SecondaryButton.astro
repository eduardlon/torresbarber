---
export interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a 
  href={href}
  class="
    group relative flex items-center justify-center w-full max-w-xs px-6 py-4
    border-2 border-zinc-700 rounded-xl
    font-roboto text-white/80
    transition-all duration-300 overflow-hidden
    active:scale-95
  "
>
  <span class="absolute left-0 top-0 h-full w-0 bg-red-700/20 transition-all duration-300 group-hover:w-full"></span>
  <span class="relative flex items-center z-10">
    <svg class="mr-3 transition-transform duration-300 group-hover:scale-110" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
      <circle cx="12" cy="12" r="3"></circle>
    </svg>
    {title}
  </span>
</a>