---
export interface Props {
  title: string;
  href: string;
}

const { title, href } = Astro.props;
---

<a 
  href={href}
  class="
    group flex items-center justify-center w-full max-w-xs px-6 py-4
    bg-transparent text-red-500 font-montserrat font-bold text-lg
    border-2 border-red-700 rounded-xl
    transition-all duration-300 ease-in-out
    hover:bg-red-700 hover:text-white
    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-black focus:ring-red-500
    active:scale-95
  "
>
  <svg class="mr-3 transition-transform duration-300 group-hover:rotate-12" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M2 9a3 3 0 0 1 0 6v2a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-2a3 3 0 0 1 0-6V7a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v2Z"></path>
    <path d="M13 5v2"></path>
    <path d="M13 17v2"></path>
    <path d="M13 11v2"></path>
  </svg>
  {title}
</a>